#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale (LC_ALL, "Russian");
	int B;
	string A;
	cout << "Введитe направление робота" << endl;
	cin >> A;
	cout << "Введите команду" << endl;
	cin >> B;
	if (A == "Ю")
	{
		switch (B)
		{
		case 1: cout << "З"; break;
		case -1: cout << "В"; break;
		case 0: cout << "Ю"; break;
		}
	}
	if (A == "С")
	{
		switch (B)
		{
		case 1: cout << "В"; break;
		case -1: cout << "З"; break;
		case 0: cout << "С"; break;
		}
	}
	if (A == "В")
	{
		switch (B)
		{
		case 1: cout << "Ю"; break;
		case -1: cout << "С"; break;
		case 0: cout << "В"; break;
		}
	}
	if (A == "З")
	{
		switch (B)
		{
		case 1: cout << "С"; break;
		case -1: cout << "В"; break;
		case 0: cout << "З"; break;
		}
	}
}
