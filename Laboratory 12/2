#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int Sign(double x) //−1, если X < 0; 0, если X = 0; 1, если X > 0.
{
	if (x < 0) return-1;
	if (x == 0) return 0;
	if (x > 0) return 1;
}

int main()
{
	setlocale(LC_ALL, "Russian");
	double x;
		cout << "Введите x = ";
		cin >> x;
		cout << Sign(x);
}
