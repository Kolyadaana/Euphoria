#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int Sign(double x) 
{
	if (x < 0) return-1;
	if (x == 0) return 0;
	if (x > 0) return 1;
}

int main()
{
	setlocale(LC_ALL, "Russian"); 
		cout << "Введите A  = ";
		cin >> A;
		cout << "Введите B = ";
		cin >> B;
		cout <<"Значение выражения равно "<< Sign(A)+Sign(B);
}
