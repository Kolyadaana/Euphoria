#include <iostream>
#include <math.h>
#include <string>

using namespace std;

double RingS(double R1, double R2) 
{
	double S, pi = 3.14;
	S = pi * R1 * R1 - pi * R2 * R2;
	return S;
}

int main()
{
	setlocale(LC_ALL, "Russian"); 
	double A, B;
		cout << "Введите внешний радиус  ";
		cin >> A;
		cout << "Введите внутренний радиус ";
		cin >> B;
		cout <<"Площадь кольца равна "<< RingS(A, B);
}
