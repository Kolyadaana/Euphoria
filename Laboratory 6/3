#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale (LC_ALL, "Russian");
	int K, N;
	cout << "Введите значение К ";
	cin >> K;
	cout << "Введите значение N ";
	cin >> N;
	K = (K + N - 1 ) % 7;
	if (K == 0)
		K = 7;
	cout << "Номер дня недели для К равно " << K;	
}
