#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale (LC_ALL, "Russian");
	int a, b, c, d, P;
	cout << "Введите значения a, b, c " << endl;
	cin >> a;
	cin >> b;
	cin >> c;
	if ((a >= b) and (a >= c))
	{
		b = b + c;
		P = a;
	}
	if ((b >= a) and (b >= c))
	{
		d = a + c;
		P = b;
	}
	if ((c >= b) and (c >= a))
	{
		d = b + a;
		P = c;
	}

	if ( d > P ) 
		cout << "Треугольник с такими сторонами существует";
	else cout << "Треугольникa с такими сторонами не существует";
}
