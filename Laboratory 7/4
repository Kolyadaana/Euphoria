#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale (LC_ALL, "Russian");
	int A, b, c, d;
	cout << "Введите A ";
	cin >> A;
	b = A / 100;
	c = (A / 10) % 10;
	d = A % 10;
	if (((b < c) and (c < d)) or ((b > c) and (c > d)))
		cout << "Цифры данного числа образуют возрастающую или убывающую последовательность";
	else cout << "Цифры данного числа не образуют возрастающую или убывающую последовательность";
}
