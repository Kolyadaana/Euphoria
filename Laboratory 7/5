#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale (LC_ALL, "Russian");
	int A, a, b, c, d;
	cout << "Введите A ";
	cin >> A;
	a = A / 1000;
	b = (A / 100) % 10;
	c = (A / 10) % 10;
	d = A % 10;
	if ((a==d) and (b==c))
		cout << "Данное число читается одинаково слева направо и справа налево";
	    else cout << "Данное число не читается одинаково слева направо и справа налево";
}
