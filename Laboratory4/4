#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	double v1, v2, S, T, r;
	cout << "Введите скорость первого автомобиля ";
	cin >> v1;
	cout << "Введите скорость второго автомобиля ";
	cin >> v2;
	cout << "Введите расстояние между автомобилями ";
	cin >> S;
	cout << "Введите прошедшее время ";
	cin >> T;
	r = v1 * T + v2 * T + S;
	cout << "Расстояние между автомобилями равно " << r;
}
