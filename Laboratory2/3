#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int A, B, C, AC, BC, S;
	cout << "Введите координату точки A " << endl;
	cin >> A;
	cout << "Введите координату точки B " << endl;
	cin >> B;
	cout << "Введите координату точки C " << endl;
	cin >> C;
	AC = C - A ;
	BC = B - C;
	if (A > B)
	{
		AC = -AC;
		BC = -BC;
	}
	S = AC*BC;
	cout << "Длина отрезка АС равна " << AC << endl; 
	cout << "Длина отрезка ВС равна " << BC << endl;
	cout << "AC*BC=" << S;
}
