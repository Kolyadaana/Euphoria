#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	double A, i;
	cout << "Введите стоимость 1 кг конфет" << endl;
	cin >> A;
	i = 0.1;
		while (i < 1)
		{
			cout << "Цена " << i << " кг конфет равна " << i * A<< endl;
			i = i + 0.1;
		}
}
