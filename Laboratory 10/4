#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int N;
	double A, S, i;
	cout << "Введите число A" << endl;
	cin >> A;
	cout << "Введите число N" << endl;
	cin >> N;
	i = 1;
	S = 1;
		while (i <= N)
		{
			S+= pow(A, i);
			i += 1;
		}
		cout << S << endl;
}
