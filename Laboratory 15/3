#include <iostream>
#include <math.h>
#include <string>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int S, i, c=0, d=0, j;
    cout << "Введите длину массивa A ";
	cin >> S;
	int* a = new int[S];
	for (int i = 0; i < S; i++)
	{
		cout << "a[" << i << "]=";
		cin >> a[i];
	}

	for (int i = 0; i < S; i++)
	{
		if (a[i] % 2 != 0) c = a[i];
	}
	for (int i = 0; i < S; i++)
	{
		if (a[i] % 2 != 0) a[i] = c;
	}

	cout << "Массив A: ";
	for (i = 0; i < S; i++) cout << a[i] << " ";
}
